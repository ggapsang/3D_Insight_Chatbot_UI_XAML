<UserControl x:Class="ChatBoxUI.Components.Headers.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:button="clr-namespace:ChatBoxUI.Components.Buttons"
             xmlns:inputbox="clr-namespace:ChatBoxUI.Components.InputBoxes"
             mc:Ignorable="d"
             Height="60"
             d:DesignHeight="60" d:DesignWidth="360">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <inputbox:UserInputBox Height="28" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1"/>
    </Grid>
</UserControl>  
