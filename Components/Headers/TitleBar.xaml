<UserControl x:Class="ChatBoxUI.Components.Headers.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:header="clr-namespace:ChatBoxUI.Components.Headers"
             xmlns:buttons="clr-namespace:ChatBoxUI.Components.Buttons"
             mc:Ignorable="d"
             Height="32"
             d:DesignHeight="32" d:DesignWidth="360">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="24"/>
        </Grid.ColumnDefinitions>
        <Image Source="PI_CI.png"
               Width="12" Height="12" Margin="8,4,0,4" Grid.Column="0"/>
        <TextBlock Text="3D Insight" FontSize="12" FontWeight="Bold" Foreground="Black"
                   VerticalAlignment="Center" Grid.Column="1" Margin="4,0,0,0"/>
        <buttons:MinimizeButton Height="16" Width="16" VerticalAlignment="Center" Grid.Column="2"/>
        <buttons:MaximizeButton Height="16" Width="16" VerticalAlignment="Center" Grid.Column="3"/>
        <buttons:CloseButton Height="16" Width="16" VerticalAlignment="Center" Grid.Column="4"/>
    </Grid>
</UserControl>
