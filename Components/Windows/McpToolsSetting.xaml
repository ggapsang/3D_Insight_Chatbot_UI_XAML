<Window x:Class="ChatBoxUI.Components.Windows.McpToolsSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBoxUI.Components.Windows"
             xmlns:buttons="clr-namespace:ChatBoxUI.Components.Buttons"
             mc:Ignorable="d"
             Title="McpToolsSettingWindow"
             Width="360" Height="240"
             WindowStyle="None"
             ResizeMode="NoResize"
             Background="Transparent"
             d:DesignHeight="360" d:DesignWidth="240">
    <Grid>
        <Border Background="White" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Image Source="../Buttons/mcp.png" 
                       Width="17" Height="17" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       Margin="0,4,0,0"
                       Grid.Column="1"
                       Grid.Row="1"
                       Panel.ZIndex="1"/>

                <TextBlock Text="MCP Tools"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                           Grid.Column="1"
                           Grid.Row="1"/>

                <!-- mcp tools list-->
                <buttons:ToggleButton x:Name="ToggleButtonFileSystem"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,5,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="filesystem"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,0,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButtonMcpDatetime"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,27,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="mcp-datetime"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,22,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButtonBraveSearch"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,49,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="brave-search"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,44,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButton3DInsightCamera"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,71,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="3D-insight-camera"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,66,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButton3DInsightDbQuery"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,93,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="3D-Insight-DB-Query"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,88,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButtonClipping"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,115,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="3D-Insight-Clipping"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,110,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:ToggleButton x:Name="ToggleButtonPrimavera"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Margin="0,137,0,0"
                                      Grid.Column="1"
                                      Grid.Row="2"/>
                <TextBlock Text="3D-Insight-Primavera"
                            FontSize="12"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="24,132,0,0"
                            Grid.Column="1"
                            Grid.Row="2"/>

                <buttons:CancelButton x:Name="CancelButton"
                                      VerticalAlignment="Bottom"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,0,0"
                                      Grid.Column="1"
                                      Grid.Row="3"/>
                
                <buttons:CommandButton x:Name="CommandButton"
                                      VerticalAlignment="Bottom"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,60,0"
                                      Grid.Column="1"
                                      Grid.Row="3"/>
            </Grid>
        </Border>
    </Grid>
</Window>
