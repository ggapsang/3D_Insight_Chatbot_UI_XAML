<UserControl x:Class="ChatBoxUI.Components.Windows.SetAPIWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBoxUI.Components.Windows"
             xmlns:button="clr-namespace:ChatBoxUI.Components.Buttons"
             mc:Ignorable="d" 
             Width="600" Height="200"
             d:DesignHeight="200" d:DesignWidth="600">
    <Grid>
        <Border Background="White"
                    CornerRadius="10"/>

        <TextBlock Text="API 키 설정 : OpenAI"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="20,24,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <TextBlock Text="OpenAI API Key"
                   FontSize="12"
                   Margin="20,68,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <Border CornerRadius="5" 
                    BorderBrush="#EDEDED" 
                    BorderThickness="1.5" 
                    Margin="20,90,20,0" 
                    Height="40" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="560">
            <TextBox x:Name="APIKeyTextBox"
                     FontSize="14"
                     Margin="10,0,0,0"
                     Text="값 입력 Open AI API KEY"
                     VerticalContentAlignment="Center"
                     Foreground="#999999"
                     Background="Transparent"
                     BorderThickness="0"/>
        </Border>

        <button:CommandButton x:Name="CommandButton"
                              Width="48" Height="36"
                              Margin="0,0,80,20"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"/>

        <button:CancelButton x:Name="CancelButton"
                             Width="48" Height="36"
                             Margin="0,0,20,20"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
