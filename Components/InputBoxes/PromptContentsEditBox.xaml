<UserControl x:Class="ChatBoxUI.Components.InputBoxes.PromptContentsEditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBoxUI.Components.InputBoxes"
             mc:Ignorable="d"
             Height="320"
             d:DesignHeight="320" d:DesignWidth="324">
    <Grid>
        <Border Background="White"
                CornerRadius="5"
                BorderThickness="1.5"
                BorderBrush="#EDEDED">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#000000"
                    Direction="300."
                    ShadowDepth="2.236"
                    BlurRadius="3"
                    Opacity="0.25"/>
            </Border.Effect>
        </Border>
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="8,8,0,0"
                   FontSize="10"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Text="프롬프트 텍스트*"/>

        <Line X1="0" Y1="0" X2="308" Y2="0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top"
              Margin="8,28,8,0"
              Stroke="#EDEDED"
              Panel.ZIndex="1"
              StrokeThickness="1"/>

        <TextBox x:Name="PromptContentsTextBox"
                 VerticalAlignment="Top"
                 Text="텍스트 내용*"
                 Margin="8,36,8,0"
                 FontSize="8"
                 Width="308"
                 Height="270"
                 BorderBrush="#EDEDED"
                 BorderThickness="0.7"
                 Foreground="#333333"
                 Background="Transparent"
                 TextWrapping="Wrap"/>

    </Grid>
</UserControl>
