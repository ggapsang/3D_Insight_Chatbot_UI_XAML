<UserControl x:Class="ChatBoxUI.Components.InputBoxes.PromptTitleEditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBoxUI.Components.InputBoxes"
             mc:Ignorable="d"
             Height="32"
             d:DesignHeight="32" d:DesignWidth="324">
    <Grid>
        <Border Background="White"
                CornerRadius="5"
                BorderThickness="1.5"
                BorderBrush="#EDEDED">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#000000"
                    Direction="300."
                    ShadowDepth="2.236"
                    BlurRadius="3"
                    Opacity="0.25"/>
            </Border.Effect>
        </Border>
        <TextBox x:Name="PromptTitleTextBox"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Text="프롬프트 이름*"
                 Margin="10,0,0,0"
                 FontSize="10"
                 FontWeight="ExtraBold"
                 Foreground="#333333"
                 Background="Transparent"
                 BorderThickness="0"
                 TextWrapping="Wrap"/>
    </Grid>
</UserControl>
    