<UserControl x:Class="ChatBoxUI.Components.InputBoxes.PromptManagerBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBoxUI.Components.InputBoxes"
             mc:Ignorable="d"
             Height="80"
             d:DesignHeight="80" d:DesignWidth="320">
    <Grid>
        <Rectangle Fill="#FFFFFF" RadiusX="5" RadiusY="5"
                   Stroke="#EDEDED"
                   StrokeThickness="1.5"/>

        <TextBlock Text="Basic Prompt"
                     FontSize="10"
                     FontWeight="Bold"
                     Margin="10,8,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Foreground="#333333"/>
        <TextBlock Text="Write your own prompt here."
                        FontSize="7"
                        Margin="10,36,0,0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Foreground="#999999"/>

        <Image Source="../Buttons/EditButton.png"
               Width="16"
               Height="16"
               Margin="0,8,10,0"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
